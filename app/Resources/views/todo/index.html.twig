{% extends 'base.html.twig' %}
{% block body %}
{% for message in app.flashes('notice') %}
    <div class="alert alert-success mt-3">
        {{ message }}
    </div>
{% endfor %}
<h2 class="display-4 text-center my-3">Latest Todos</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Todo</th>
            <th>Due Date</th>
            <th></th>
        </tr>
    </thead>
    {% for todo in todos %}
    <tbody>
        <tr>
            <th scope="row">{{ todo.id }}</th>
            <td>{{ todo.name }}</td>
            <td>{{ todo.dueDate|date('F j, Y, g:i a') }}</td>
            <td> 
                <a href="/todo/details/{{ todo.id }}" class="btn btn-success">View</a> 
                <a href="/todo/edit/{{ todo.id }}" class="btn btn-info">Edit</a>
                <a href="/todo/delete/{{ todo.id }}" class="btn btn-danger">Delete</a>        
            </td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
{% endblock %}